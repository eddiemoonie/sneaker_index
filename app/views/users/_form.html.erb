<%= form_for @user, :url => url_for(:controller => "users", :action => "create") do |f| %>

  <div class="welcome-input">
    <%= f.text_field :username, :placeholder => "Username", :class => "user-input" %>
    <%= f.text_field :email, :placeholder => "Email", :class => "user-input" %>
  </div>

  <div class="welcome-input">
    <%= f.text_field :first_name, :placeholder => "First Name", :class => "user-input" %>
    <%= f.text_field :last_name, :placeholder => "Last Name", :class => "user-input" %>
  </div>

  <div class="welcome-input">
    <%= f.password_field :password, :placeholder => "Password", :class => "user-input" %>
    <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "user-input" %>
  </div>

  <div class="">
    <%= f.submit "Sign Up", :class => "input-buttons" %>
  </div>

<% end %>
