<h2><%= current_user.username %>'s Account</h2>
<div class="display">
    <%= link_to "Order History", orders_path, :class => "account-tablinks" %>
    <%= link_to "Your Market", user_path(current_user), :class => "account-tablinks" %>
    <%= link_to "Favorites", "/favorites", :class => "account-tablinks" %>
</div>

<br>

<% @user.products.each do |product| %>
  <% if !product.sold %>
    <div class="column">
      <div class="image-container">
        <div class="img">
          <%= image_tag product.image.url(:preview) if product.image.exists? %>
        </div>
      </div>
      <p><%= link_to "#{product.name}", product_path(product) %></p>
      <p><%= product.size %> | <%= number_to_currency(product.price, :unit => "$") %></p>
      <% if !product.sold && product.user == current_user %>
        <div class="buttons-left">
          <%= button_to "Edit", edit_product_path(product), :method => :get %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
