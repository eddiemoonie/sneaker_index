<h2>Shopping Cart</h2>

<% @cart.cart_items.each do |cart_item| %>
  <div class="">
    <div class="">
      <%= image_tag cart_item.product.image.url(:thumb) if cart_item.product.image.exists? %>
      <%= link_to "#{cart_item.product.name}", product_path(cart_item.product) %> |
      <strong>Seller: </strong><%= link_to "#{cart_item.product.user.username}", user_path(cart_item.product.user) %> |
      <%= number_to_currency(cart_item.product.price, :unit => "$") %> |
      <%= link_to "Remove item", cart_item_path(cart_item), method: :delete %>
    </div>
  </div>
<% end %>
<% if @cart.cart_items.present? %>
  <div class="subtotal">
    <strong>Subtotal: </strong><%= number_to_currency(@cart.subtotal, :unit => "$") %>
  </div>
  <div class="checkout">
    <button><%= link_to "Checkout", new_order_path %></button>
  </div>
<% else %>
  <div class="">
    <h3>Your Shopping Cart is Empty</h3>
  </div>
<% end %>
