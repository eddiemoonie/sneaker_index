<div class="row">
  <% @products.each do |product| %>
    <% if !product.sold %>
      <div class="column">
        <div class="image-container">
          <div class="img">
            <%= image_tag product.image.url(:preview) if product.image.exists? %>
          </div>
        </div>
        <p><%= link_to "#{product.name}", product_path(product) %></p>
        <p><%= product.size %> | <%= number_to_currency(product.price, :unit => "$") %></p>
        <% if @current_cart.products.include?(product) %>
          <div class="buttons-left">
            <%= button_to "Added to Cart", {}, :disabled => true %>
          </div>
        <% else %>
          <div class="buttons-left">
            <%= button_to "Add to Cart", cart_items_path(:product_id => product.id) %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
