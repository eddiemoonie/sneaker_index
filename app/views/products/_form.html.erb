<%= form_for @product do |f| %>

  <div class="">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </div>

  <div class="">
    <%= f.label :image %>
    <br>
    <%= f.file_field :image %>
  </div>

  <div class="">
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </div>

  <div class="">
    <%= f.label :size %>
    <br>
    <%= f.select:size, options_for_select((7.0..15.0).step(0.5)), :prompt => "Select" %>
  </div>

  <div class="">
    <%= f.label :condition %>
    <br>
    <%= f.select :condition, ["Brand New", "Pre-Owned"], :prompt => "Select" %>
  </div>

  <div class="">
    <%= f.label :price %>
    <br>
    <%= f.text_field :price %>
  </div>

  <div class="">
    <%= f.submit %>
  </div>
<% end %>
