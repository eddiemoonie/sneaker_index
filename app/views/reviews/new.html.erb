<h1><%= @product.name %></h1>

<div class="review-container">
  <div class="review">
    <div class="review-column-left">
      <div class="review-img">
        <%= image_tag @product.image.url(:preview) if @product.image.exists? %>
      </div>
    </div>
    <div class="review-column-right">
      <div class="review-post">
        <p class="review-input">Seller: <span class="seller-name"><%= @product.user.username %></span></p>
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
