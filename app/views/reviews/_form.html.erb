<div class="review-form">
  <%= form_for @review do |f| %>

    <div class="input-container">
      <%= f.hidden_field :product_id, :value => params[:product_id], :class => "review-input" %>
    </div>

    <div class="input-container">
      <%= f.label :rating, "Rating: ", :class => "review-input" %>
      <%= f.select:rating, options_for_select((0..5).step(1)), :prompt => "Select", :class => "review-input" %>
    </div>

    <div class="input-container">
      <%= f.label :post, "Write a Review...", :class => "review-input" %>
      <br>
      <%= f.text_area :post, :class => "review-input"%>
    </div>

    <div class="">
      <%= f.submit "Submit", :class => "input-buttons" %>
    </div>

  <% end %>
</div>
