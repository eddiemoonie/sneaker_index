<!DOCTYPE html>
<html>
  <head>
    <title>SneakerIndex</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-inverse">
      <h1><%= link_to "#sneakerindex", root_path %></h1>
      <nav>
        <% if current_user %>
          <div class="tablinks">
            <%= link_to "Marketplace", root_path, :class => "tablinks" %>
          </div>
          <div class="tablinks">
            <%= link_to "Account", user_path(current_user), :class => "tablinks" %>
          </div>
          <div class="tablinks">
            <%= link_to "Favorites", "/favorites", :class => "tablinks" %>
          </div>
          <div class="tablinks">
            <%= link_to "Sell", new_product_path, :class => "tablinks" %>
          </div>
          <div class="tablinks">
            <%= link_to "Cart", cart_path, :class => "tablinks" %>
          </div>
          <div class="tablinks">
            <%= link_to "Log Out", logout_path, :method => :delete, :class => "tablinks" %>
          </div>
        <% else %>
          <div class="tablinks">
            <%= link_to "Log In", login_path, :class => "tablinks" %>
          </div>
          <div class="tablinks">
            <%= link_to "Sign Up", signup_path, :class => "tablinks" %>
          </div>
        <% end %>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
